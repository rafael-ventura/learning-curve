{
    "scopeName": "source.lcml",
    "patterns": [
        {
            "begin": "^(#1|#2|#3)",
            "end": "$",
            "name": "cabecalho.lcml",
            "patterns": [
                {
                    "match": ".+",
                    "name": "cabecalho.texto.lcml"
                }
            ]
        },
        {
            "begin": "^#img\\s+",
            "end": "$",
            "name": "imagem.lcml",
            "patterns": [
                {
                    "match": "([^\\s\"]+)(?=\\s|$)",
                    "name": "imagem.url.lcml"
                },
                {
                    "match": "\"([^\"]*)\"",
                    "name": "imagem.texto_alternativo.lcml"
                },
                {
                    "match": "(?<=\\s)(\\d+)\\s+(\\d+)",
                    "name": "imagem.dimensao.lcml"
                }
            ]
        },
        {
            "begin": "^#video\\s+",
            "end": "$",
            "name": "video.lcml",
            "patterns": [
                {
                    "match": "([^\\s]+)(?=\\s|$)",
                    "name": "video.url.lcml"
                },
                {
                    "match": "(\\d+)\\s+(\\d+)",
                    "name": "video.dimensao.lcml"
                }
            ]
        },
        {
            "begin": "^#code\\s*$",
            "end": "^#code\\s*$",
            "name": "codigo.lcml",
            "patterns": [
                {
                    "match": ".+",
                    "name": "codigo.conteudo.lcml"
                }
            ]
        },
        {
            "begin": "^#list\\s*$",
            "end": "^#list\\s*$",
            "name": "lista.lcml",
            "patterns": [
                {
                    "match": "^.+$",
                    "name": "lista.item.lcml"
                }
            ]
        },
        {
            "begin": "^#concepts\\s*$",
            "end": "^#concepts\\s*$",
            "name": "conceitos.lcml",
            "patterns": [
                {
                    "match": "^\\-\\s*(.+)$",
                    "name": "conceitos.item.lcml"
                },
                {
                    "match": "^(?!#concepts|\\-)(.+)$",
                    "name": "conceitos.descricao.lcml"
                }
            ]
        },
        {
            "begin": "^#table(?:\\s+(border))?\\s*$",
            "end": "^#table\\s*$",
            "name": "tabela.lcml",
            "patterns": [
                {
                    "match": "\\|",
                    "name": "tabela.divisoria.lcml"
                },
                {
                    "match": "[^|\n]+",
                    "name": "tabela.conteudo.lcml"
                }
            ]
        },
        {
            "begin": "^#scenario\\s*$",
            "end": "^#scenario\\s*$",
            "name": "cenarios.lcml",
            "patterns": [
                {
                    "match": "^\\-\\s*(.+)$",
                    "name": "cenarios.passos.lcml"
                },
                {
                    "match": "^(?!#scenario|\\-)(.+)$",
                    "name": "conceitos.descricao.lcml"
                }
            ]
        },
        {
            "begin": "^#question(?:\\s+(\\w+))?\\s*$",
            "end": "^#question\\s*$",
            "name": "questao.lcml",
            "patterns": [
                {
                    "match": "^\\(\\*\\)\\s*(.+)$",
                    "name": "questao.opcao.correta.lcml"
                },
                {
                    "match": "^\\(\\)\\s*(.+)$",
                    "name": "questao.opcoes.incorretas.lcml"
                },
                {
                    "match": "^(?!#question|\\(\\*\\)|\\(\\))\\s*$",
                    "name": "questao.enunciado.lcml"
                },
                {
                    "name": "questao.paragrafo.lcml",
                    "match": "^(?!#question|\\(\\*\\)|\\(\\))\\s*$"
                }
            ]
        },
        {
            "name": "quebra.paragrafo.lcml",
            "match": "\\\\\\s*$"
        },
        {
            "name": "link.lcml",
            "match": "\\[([^\\]]+)\\]\\(([^\\)]+)\\)"
        },
        {
            "name": "negrito.lcml",
            "match": "(\\*\\*)(.+?)(\\*\\*)"
        },
        {
            "name": "italico.lcml",
            "match": "(\\*)(.+?)(\\*)"
        },
        {
            "name": "tachado.lcml",
            "match": "(~~)(.+?)(~~)"
        },
        {
            "name": "sublinhado.lcml",
            "match": "(__)(.+?)(__)"
        },
        {
            "name": "sobrescrito.lcml",
            "match": "(\\^)(.+?)(\\^)"
        },
        {
            "name": "subscrito.lcml",
            "match": "(~)(.+?)(~)"
        },
        {
            "name": "fonte.aumentada.lcml",
            "match": "(\\+\\+)(.+?)(\\+\\+)"
        }
    ]
}